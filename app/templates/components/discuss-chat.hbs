
	

{{#paper-list}}
 {{#paper-subheader}}topic name{{/paper-subheader}}
 {{#each message as |msg|}}
    {{#paper-item class="md-3-line"}}
      <img src='https://previews.123rf.com/images/pandavector/pandavector1704/pandavector170406117/76645972-man-with-beard-icon-flat-single-avatar-icon-.jpg' alt="no image" class="md-avatar">
      <div class="md-list-item-text">
        <div class="layout-row layout-align-space-between">
		<h3>Name</h3>  
		{{!-- <h4 class="time-head">2d ago</h4> --}}
		</div>
        <p>{{msg}}</p>
      </div>
	  {{paper-divider inset=true}}
    {{/paper-item}}
    {{/each}}
    

	
    
    <div class="text-box">
    	<div>
        	<span class="flex"></span>         
			{{paper-input label="message" type="text" value=var block=true onChange=(action (mut var)) icon="add"}}   
            <a href="#" {{action 'sendButtonPressed'}}>
            {{paper-icon "send"}} 
            </a>
		</div>
	</div>
{{/paper-list}}