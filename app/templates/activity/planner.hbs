{{outlet}}

<div class="layout-column">
    {{#each newCard as |topping|}}
        {{#paper-card as |card|}}
            <div class="layout-row layout-align-space-between-start">
            {{#paper-list}}
                
                    {{#paper-item as |controls|}}
                       
                            {{topping.projectName}}
                            {{#card.actions}}
                            {{#paper-button iconButton=true onClick=(action "deleteCard" topping)}}
                                
                                {{paper-icon "delete"}}
                            {{/paper-button}}
                            {{/card.actions}}
                        
                    {{/paper-item}}
                
            {{/paper-list}}
            </div>
        {{/paper-card}}
    {{/each}}
</div>
<div class="layout-row layout-align-center-end">
    {{paper-input label="Add New Project" type="text" value=name2 block=true 
    onChange=(action (mut name2))}}
    {{#paper-button iconButton="true" onClick=(action "addCard")}}
        {{paper-icon "add"}}
    {{/paper-button}}
</div>