{{outlet}}
<div class="layout-row layout-align-center-end">
    {{paper-input label="Add Task" type="text" value=name2 block=true 
    onChange=(action (mut name2))}}
    {{#paper-button iconButton="true" onClick=(action "addCard")}}
        {{paper-icon "add"}}
    {{/paper-button}}
</div>
<div class="layout-column">
    {{#each newCard as |topping|}}
        {{#paper-card}}
            {{#paper-list}}
                
                    {{#paper-item as |controls|}}
                        <p>{{topping.projectName}}</p>
                    {{/paper-item}}
                
            {{/paper-list}}
        {{/paper-card}}
    {{/each}}
</div>
